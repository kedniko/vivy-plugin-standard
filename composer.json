{
    "name": "kedniko/vivy-plugin-standard",
    "description": "A skeleton repository for my packages",
    "keywords": [
        "php",
        "skeleton",
        "package"
    ],
    "authors": [
        {
            "name": "kedniko",
            "email": "42846752+kedniko@users.noreply.github.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kedniko\\Vivy\\Plugin\\Standard\\": "src/"
        }
    },
    "require": {
        "php": "^8.2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "kedniko/vivy": "dev-main",
        "laravel/pint": "^1.13.7",
        "pestphp/pest": "^2.28.1",
        "phpstan/phpstan": "^1.10.50",
        "rector/rector": "0.15",
        "symfony/var-dumper": "^6.4.0|^7.0.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/app/",
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test": "pest --colors=always",
        "test:all": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
